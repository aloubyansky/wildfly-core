<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="request-controller" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem"/>
    <elem name="op-params"/>
  </annotation>
  <provides>
    <capability name="$profile.org.wildfly.request-controller"/>
  </provides>
  <refs>
    <ref feature="profile" include="true" nillable="true"/>
    <ref feature="extension" include="true"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" default="request-controller" feature-id="true"/>
    <param name="extension" default="org.wildfly.extension.request-controller"/>
    <param name="active-requests" nillable="true"/>
    <param name="max-requests" nillable="true"/>
    <param name="track-individual-endpoints" nillable="true"/>
  </params>
  <packages>
    <package name="org.wildfly.extension.request-controller.main"/>
  </packages>
</feature-spec>
