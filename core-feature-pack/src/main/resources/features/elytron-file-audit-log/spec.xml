<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="elytron-file-audit-log" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem,file-audit-log"/>
    <elem name="op-params" value="path,relative-to,format"/>
  </annotation>
  <refs>
    <ref feature="elytron"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" feature-id="true"/>
    <param name="file-audit-log" default="local-audit" feature-id="true"/>
    <param name="path" default="audit.log"/>
    <param name="relative-to" nillable="false"/>
    <param name="format" default="JSON"/>
  </params>
</feature-spec>
