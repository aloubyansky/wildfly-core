<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="remoting-http-connector" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem,http-connector"/>
    <elem name="op-params" value="connector-ref,security-realm"/>
  </annotation>
  <provides>
    <capability name="$profile.org.wildfly.remoting.http-connector.$http-connector"/>
  </provides>
  <refs>
    <ref feature="remoting"/>
<!-- can't be satisfied in the domain
     <ref feature="security-realm">
      <param name="host" maps-to="host"/>
      <param name="security-realm-core-service" maps-to="core-service"/>
      <param name="security-realm" maps-to="security-realm"/>
    </ref>
 -->
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" feature-id="true"/>
    <param name="http-connector" feature-id="true"/>
    <param name="connector-ref"/>
    <param name="security-realm"/>
    <param name="security-realm-core-service" default="management"/>
  </params>
</feature-spec>
