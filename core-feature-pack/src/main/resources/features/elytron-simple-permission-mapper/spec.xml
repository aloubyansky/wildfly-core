<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="elytron-simple-permission-mapper" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem,simple-permission-mapper"/>
  </annotation>
  <provides>
    <capability name="$profile.org.wildfly.security.permission-mapper.$simple-permission-mapper"/>
  </provides>
  <refs>
    <ref feature="elytron"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" feature-id="true"/>
    <param name="simple-permission-mapper" feature-id="true"/>
    <param name="permission-mappings" default="[{principals=[anonymous]},{match-all=true,permissions=[class-name=org.wildfly.security.auth.permission.LoginPermission]}]"/>
    <param name="mapping-mode" nillable="true"/>
  </params>
</feature-spec>
